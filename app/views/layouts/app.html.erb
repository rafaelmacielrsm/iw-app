<!DOCTYPE html>
<html>
  <head>
    <title>IwApp</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet"> 
    <%= stylesheet_link_tag    'app', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'app', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="app">
    <%= render partial: 'partials/navbar' %>

    
    <%= yield %>

    <% if notice || alert%>
    <p class="notice"><%= notice %></p>    
    <p class="alert"><%= alert %></p>
    
  <% end %>   

  <div class="fixed-action-btn">  
    <% if user_signed_in? %>
      <%= link_to(new_user_diet_path, 
        class: "btn-floating btn-large waves-effect waves-light red" ) do %>
      
        <i class="material-icons">add</i>
      <% end %>
    <% end %>    
  </div>
   
  </body>
</html>
